<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_view_id_inherit_plantilla_producto" model="ir.ui.view">
        <field name="name">producto.plantilla.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[(@name='barcode')]" position="after">
                <field name = 'talla_id'/>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_inherit_informe_inventario_talla" model="ir.ui.view">
        <field name="name">informe.inventario.talla.view.form.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[(@name='product_id')]" position="after">
                <field name='talla_info'/>
            </xpath>
        </field>
    </record>

</odoo>